#include <stdio.h>

int main() {
    int num, sum = 0, digit;

    // Input the number from the user
    printf("Enter a number: ");
    scanf("%d", &num);

    // Process each digit and add to sum
    while (num != 0) {
        digit = num % 10;   // Get the last digit
        sum += digit;       // Add digit to sum
        num /= 10;          // Remove last digit
    }

    // Output the result
    printf("Sum of all digits: %d\n", sum);

    return 0;
}
